@model GamifyFitness.Data.Entities.FitnessUser
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

@*<div class="container text-center card card-body bg-light">*@
    <div class="row">
        <div class="text-light">
            <i class="fas fa-user-circle fa-5x btn btn-outline-light"></i>
        </div>
        <div class="text-light">
            <h2> @Model.Username</h2>
            <h2> Level: 1</h2>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-8 container">
            <div class="progress">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="jumbotron text-center">
    <h1> <p class="text-light">GamiFit</p> </h1>
    <h4><i> <p class="text-light">Making Fitness Fun</p></i></h4>
</div>


<div class="row">
    <a asp-controller="Home" asp-action="Profile" class="col-md-2 offset-md-4 text-center btn btn-outline-light">
        <i class="fas fa-star fa-5x pt-2 pb-1"></i><br />
        <label class="pt-2">My Profile</label>
    </a>
    <a asp-controller="Game" asp-action="Index" class="col-md-2 text-center btn btn-outline-light">
        <i class="fas fa-gamepad fa-5x pt-2 pb-1"></i><br />
        <label class="pt-2">Play Game</label>
    </a>
</div>
<br />
<div class="row">
    <a asp-controller="Home" asp-action="DisplayFriends" class="col-md-2 offset-md-4 text-center btn btn-outline-light">
        <i class="fas fa-user-friends fa-5x pt-2 pb-1"></i><br />
        <label class="pt-2">Find Friends</label>
    </a>
    <a asp-controller="Home" asp-action="DisplayFriends" class="col-md-2 text-center btn btn-outline-light">
        <i class="fas fa-address-book fa-5x pt-2 pb-1"></i><br />
        <label class="pt-2">My Friends</label>
    </a>
</div>
