@model CreateUser
@{
    ViewData["Title"] = "Create New Account";
}

@section Scripts{
    <Script src="~/lib/jquery-validation/dist/jquery.validate.js"></Script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

    <div class="jumbotron text-center">
        <h1> <p class="text-light">GamiFit</p> </h1>
        <h2> <p class="text-light">@ViewData["Title"] </p> </h2>
    </div>

<form method="post">
    @*<div class="card card-body bg-light">*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="text-light offset-md-2">
            <div class="form-group">
                <label asp-for="name"><b>Name:</b> </label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname"> <b>Surname:</b> </label>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age"> <b>Age:</b></label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username"> <b>Username:</b></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"> <b>Email:</b> </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"> <b>Password:</b></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"> <b>Confirm Password:</b></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>

        <div class="col-sm-5 col-md-4 col-lg-3 offset-md-2 offset-lg-2">
            <input type="submit" class="btn btn-secondary" value="Create Account">
        </div>
    </div>
</form>